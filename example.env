# Example environment configuration for MCP BigQuery Server
# Copy this file to .env and update with your values

# Required: Google Cloud Project settings
BIGQUERY_PROJECT=your-gcp-project-id
BIGQUERY_LOCATION=US

# Optional: Restrict to specific datasets (comma-separated)
# BIGQUERY_DATASETS=dataset1,dataset2,dataset3

# Authentication method 1: Service Account Key File (not recommended for production)
# BIGQUERY_KEY_FILE=/path/to/service-account-key.json

# Authentication method 2: OAuth Flow (requires client secrets)
# BIGQUERY_USE_OAUTH_FLOW=true
# GOOGLE_CLIENT_SECRETS_FILE=client_secrets.json
# GOOGLE_TOKEN_FILE=token.json

# Cloud Run deployment settings
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_REGION=us-central1

# For local testing with Supergateway
# PORT=8080 